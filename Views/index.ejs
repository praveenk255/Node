<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flight Tracker</title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <div class="container">
    <h1>Flight Tracker</h1>
    <button onclick="window.location.href='/manage'" class="btn btn-primary">Flight Data Management</button>
    
    <form id="main-form">
      <div>
        <label for="flight-number">Flight Number</label>
        <select id="flight-number" name="flightNumber">
          <% flights.forEach(flight => { %>
            <option value="<%= flight.flightNumber %>"><%= flight.flightNumber %></option>
          <% }); %>
        </select>
      </div>
      <!-- Remaining fields here (STA, STD, ATA, etc.) -->
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</body>
</html>
